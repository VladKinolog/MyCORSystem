<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/green_bg"
    android:id="@+id/activity_root_element">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/color_bg_change"
        android:id="@+id/setting_title"
        android:layout_margin="2dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_button_color_green"
            android:layout_margin="4dp"
            android:onClick="onClickGreenBgButton"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_button_color_blue"
            android:layout_margin="4dp"
            android:onClick="onClickBlueBgButton"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_button_color_light_yellow"
            android:layout_margin="4dp"
            android:onClick="onClickLightyellowBgButton"/>
        <Button
            android:layout_width="040dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_button_color_yellow"
            android:layout_margin="4dp"
            android:onClick="onClickYellowBgButton"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_button_color_pink"
            android:layout_margin="4dp"
            android:onClick="onClickPinkBgButton"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_button_color_red"
            android:layout_margin="4dp"
            android:onClick="onClickRedBgButton"/>

    </LinearLayout>

</LinearLayout>